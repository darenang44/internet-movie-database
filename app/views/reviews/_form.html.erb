<!-- in order to review a movie we have to first find the movie, and build the actual review-->

<%= simple_form_for([@movie, @movie.reviews.build]) do |f| %>
  <div id="rating-form">
    <label> Rating </label>
  </div>
    <%= f.input :comment %>
    <%= f.button :submit, class: "btn-custom2"%>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
