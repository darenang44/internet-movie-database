<% title "Placeholder Title" %>
<% description "Placeholder description." %>
<% keywords "Placeholder keywords" %>

<h1 class="current-category"><%= params[:genre] %></h1>
  <% if @movies.count == 0 %>
    <h3>There are no movies in this genre</h3>
  <% else %>
    <% @movies.each do |movie| %>
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <p><%= truncate(movie.description, length: 50) %></p>
      <p>Directed By: <%= movie.director %></p>
    <% end %>
  <% end %>
